<p style="color: green"><%= notice %></p>
<div>
  <div class="container-fluid p-5 bg-dark text-white">
    <h1><%= @project.title %></h1>
    <p><%= @project.description %></p>
    <p><a href=<%= @project.github %>>Check out the GitHub Repo</a></p>
  </div>

  <% if user_signed_in? %>
    <div class="btn-group">
      <%= link_to "Edit this project", edit_project_path(@project), :class => "btn btn-secondary" %>
      <%= link_to "Back to projects", projects_path, :class => "btn btn-secondary" %>
      <%= button_to "Destroy this project", @project, method: :delete, :class => "btn btn-danger" %>
    </div>
  <% end %>
</div>
